# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_GITHUB_API_URL=https://api.github.com
NEXT_PUBLIC_GITHUB_OWNER=your-github-owner
NEXT_PUBLIC_GITHUB_REPO=your-repo-name

# Secrets (DO NOT commit to version control)
# Copy this file to .env.local and fill in your actual values
GITHUB_TOKEN=your_github_token_here

# Debug Configuration (Development only)
NEXT_PUBLIC_DEBUG_DATA_LOADER=true
NEXT_PUBLIC_DEBUG_DATA_SOURCE=true
NEXT_PUBLIC_DEBUG_LEADERBOARD=true
NEXT_PUBLIC_DEBUG_API=true
NEXT_PUBLIC_DEBUG_GENERAL=true

# Production overrides
NODE_ENV=development
